{
  "name": "Palmodoro",
  "description": "Chrome extension to reduce distractions by managing work tabs and prompting users when switching to non-work tabs",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/sched_tasks.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content_scripts/distraction.js"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["config.json", "teacher-config.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
